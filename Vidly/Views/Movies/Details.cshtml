@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.GenreType.GenreName</li>
    <li>Release Date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Added Date: @Model.DateAdded.ToShortDateString()</li>
    <li>Number of Stock: @Model.Stock</li>
</ul>

